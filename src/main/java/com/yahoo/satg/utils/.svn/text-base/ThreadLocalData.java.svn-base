package com.yahoo.satg.utils;

import java.util.HashMap;

/**
 * A thread local storage of data used for testing
 *
 * @author sglaser
 *
 */
public class ThreadLocalData {

	private static ThreadLocal<HashMap> threadLocalData = new ThreadLocal<HashMap>() {
		protected HashMap initalValue() {
			return new HashMap();
		}
	};
	
	public Object getThreadData(Object key) {
		return threadLocalData.get().get(key);
	}
	
	public void setThreadData(Object key, Object value) {
		threadLocalData.get().put(key, value);
	}
}
